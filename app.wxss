/**app.wxss**/
page {
  height: 100%;
  position: fixed;
  background-image: url(https://preppywallpapers.com/wp-content/uploads/2018/12/Christmas-iPhone-Wallpaper-7.jpg);
  background-position: left;
  background-repeat: no-repeat; 
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.picContainer {
  display: block;
  width: 100%;
  align-content: center;
  align-self: center;
}

.greenBtn {
  color: white;
  background-color: #1AAD19;
  opacity: 0.9;
}

.orangeBtn {
  background-color:#FF7F50; 
  color:white; 
  opacity: 0.9;
}

.feedbackBtn {
  background-color:rgba(255, 80, 80, 0.877); 
  font-style: bold;
  color:white; 
  opacity: 0.9;
}

.borderBtn {
  border: .1px solid rgb(84, 85, 87);
}
